<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dika</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.6.3.min.js"
            integrity="sha256-pvPw+upLPUjgMXY0G+8O0xUf+/Im1MZjXxxgOcBQBXU="
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/Dika.styles.css" asp-append-version="true" />
</head>
<body>

    <header>

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li>
                            <a class="nav-link text-dark btn btn-outline-success" asp-area="" asp-controller="Home" asp-action="Index">მთავარი გვერდი</a>
                        </li>
                        <li class="nav-item">
                            <div class="button-paste"></div>

                            <a class="nav-link text-dark btn btn-outline-success btn-outline-primary" asp-area="" asp-controller="Home" asp-action="AddProduct">პროდუქტის დამატება</a>

                        </li>
                        <li class="nav-item">
                            <div class="button-paste"></div>

                            <a class="nav-link text-dark btn btn-outline-success btn-outline-primary" asp-area="" asp-controller="Home" asp-action="Inventorying">აღწერა</a>

                        </li>

                    </ul>

                </div>
                <ul class="navbar-nav flex-grow-1">
                </ul>
                <form action="Home\Search" method="get">

                    <input type="text" id="search" name="search" />


                    <button class="nav-link text-dark btn btn-outline-success" asp-area="" asp-controller="Home" asp-action="Search">ძებნა</button>

                </form>




            </div>

        </nav>

    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    @*<script>
    $(document).ready(function () {
    $('.button-paste').html('<div>test</div>');
    });
    </script>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
