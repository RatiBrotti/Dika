@model List<Dika.Models.Invertory>


<table class="table table-active">
    <tr>
        <td>პროდუქტის დასახელება</td>
        <td>შტრიხკოდი</td>
        <td>SKU კოდი</td>
        <td>ფასი</td>
        <td>ზომა</td>
        <td style="color:red">მოწოდებული რაოდენობა</td>
        <td style="color:green">ასახული რაოდენობა</td>
        <td style="color:blue">სხვაობა</td>
    </tr>
    @{
        if(Model==null)
        {
            <h1>@ViewBag.Error</h1>
        }
        else
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Barcode</td>
                    <td>@item.SKU</td>
                    <td>@item.Price</td>
                    <td>@item.Size</td>
                    <td>@item.QuantityOfProvider</td>
                    <td>@item.QuantityCounted</td>
                    <td>
                        @{
                            var difference = item.QuantityOfProvider - item.QuantityCounted;
                        }

                    </td>
                </tr>
            }
        }
    }
    
   

</table>
